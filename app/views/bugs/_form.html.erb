
<%= form_for @bug do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :priority %>
  <%= f.text_field :priority %>
  <br />

  <%= f.label :team_member %>
  <%= f.text_field :team_member %>
  <br />

  <%= f.label :start_date %>
  <%= f.text_field :start_date %>
  <br />

  <%= f.label :due_date %>
  <%= f.text_field :due_date %>
  <br />

  <br />
  <%= f.submit  %>
<% end  %>
