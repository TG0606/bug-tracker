
<%= form_for @bug do |f| %>

<%= f.hidden_field :project_id %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :priority %>
  <%= f.text_field :priority %>
  <br />

  <%= f.label :start_date %>
  <%= f.text_field :start_date %>
  <br />

  <%= f.label :due_date %>
  <%= f.text_field :due_date %>
  <br />

  <br />

  <% @bug.project.users.each do |u| %>
    <%= f.check_box :user_id, { multiple: true}, u.id, false  %>
    <%= u.name %>
    <br />
    <br />
  <% end %>

  <%= f.submit  %>
<% end  %>
