<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>

  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>

  <div class = "form-group">
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  </div>

  <div class = "form-group">
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>
    </div>

  <%= f.submit  %>

 <% end %>
